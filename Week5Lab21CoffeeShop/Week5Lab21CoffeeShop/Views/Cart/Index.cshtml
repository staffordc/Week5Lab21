@using System.Linq
@model IEnumerable<Week5Lab21CoffeeShop.Domain.Models.Item>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Your Cart</h2>


<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.ItemName)
        </th>
        <th>
            Count
            </th>
        
      
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.ItemName)
        </td>
        <td>
            @{var ItemId = item.ItemId;}
            @ViewBag.ItemsCounts
        </td>
        <td>
            @Html.ActionLink("Add", "Add", new { id = item.ItemId }) |
        </td>
       
    </tr>
}

</table>
